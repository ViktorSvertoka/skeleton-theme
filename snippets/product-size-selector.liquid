{% assign shoe_size_option = product.options_by_name['Shoe size'] %}
{% assign size_option_label = shoe_size_option.name | default: 'Size' %}

<div class="mb-2 flex items-center justify-between">
          <span class="product__size-label text-sm font-medium">Select {{ size_option_label }}:</span>
          <a href="#" class="text-sm underline">Size Guide</a>
        </div>

        <ul class="product__sizes-list mb-6 grid grid-cols-3 gap-3">
  {% for value in shoe_size_option.values %}
    <li>
      <button
        type="button"
        class="product__sizes-btn flex items-center justify-center h-(--size-52) w-full rounded-lg border border-stroke bg-white px-4 text-sm font-medium text-dark transition-colors hover:border-dark focus:outline-none"
        data-size="{{ value }}"
        aria-pressed="false"
      >
        UK {{ value }}
      </button>
    </li>
  {% endfor %}
</ul>
