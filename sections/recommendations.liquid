{% assign collection = section.settings.collection %}

{% if collection %}
<section class="py-16">
  <div class="max-w-[1320px] mx-auto px-4">
    <h2 class="text-center text-2xl font-medium mb-10">
      {{ section.settings.heading }}
    </h2>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
      {% for product in collection.products limit: 5 %}
        <a href="{{ product.url }}" class="block rounded-2xl bg-white p-4">
          <div class="aspect-square flex items-center justify-center bg-white rounded-xl overflow-hidden">
            {% if product.featured_image %}
              <img
                src="{{ product.featured_image | image_url: width: 312 }}"
                alt="{{ product.featured_image.alt | escape }}"
                width="312"
                height="312"
                loading="lazy"
                class="w-full h-full object-contain"
              >
            {% endif %}
          </div>

          <div class="mt-4">
            <p class="text-sm font-medium leading-snug">
              {{ product.title }}
            </p>

            <p class="mt-1 text-sm text-neutral-500">
              {{ product.price | money }}
            </p>
          </div>
        </a>
      {% endfor %}
    </div>
  </div>
</section>
{% endif %}



{% schema %}
{
  "name": "Recommendations",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "You may also like"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    }
  ],
  "presets": [
    {
      "name": "Recommendations"
    }
  ]
}
{% endschema %}
