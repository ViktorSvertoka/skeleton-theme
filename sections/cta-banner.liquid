<section class="container my-16">
  <div class="relative overflow-hidden rounded-2xl bg-dark">
    {% if section.settings.image %}
  {% assign alt_text = section.settings.heading | default: 'CTA banner image' %}

  {{
    section.settings.image
    | image_url: width: 1440, height: 500
    | image_tag:
      alt: alt_text,
      class: 'absolute inset-0 h-full w-full object-cover',
      loading: 'lazy',
      widths: '375,1440',
      sizes: '100vw'
  }}
{% endif %}

    <div class="absolute inset-0 bg-black/60"></div>

    <div class="relative z-10 grid grid-cols-1 lg:grid-cols-2 items-center gap-10 px-6 py-16 lg:px-16 lg:py-24">
      <div>
        {% if section.settings.heading != blank %}
          <h2 class="text-3xl md:text-4xl xl:text-5xl font-semibold text-white mb-4">
            {{ section.settings.heading }}
          </h2>
        {% endif %}

        {% if section.settings.text != blank %}
          <p class="text-base md:text-lg text-gray-light max-w-xl mb-8">
            {{ section.settings.text }}
          </p>
        {% endif %}

        {% if section.settings.button_label != blank %}
          <a
            href="{{ section.settings.button_link }}"
            class="inline-flex items-center justify-center rounded-lg bg-white px-6 py-3 text-sm font-medium text-dark transition hover:bg-gray-200 focus:outline-none focus:ring-2 focus:ring-white"
          >
            {{ section.settings.button_label }}
          </a>
        {% endif %}
      </div>
      <div class="hidden lg:block"></div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "CTA Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Step Into Next-Level Comfort"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Text",
      "default": "Experience the perfect mix of style, support, and all-day cushioning."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    }
  ],
  "presets": [
    {
      "name": "CTA Banner"
    }
  ]
}
{% endschema %}
