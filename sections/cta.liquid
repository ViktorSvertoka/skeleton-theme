{% assign background_image = section.settings.image | image_url: width: 1440 %}

<section
  class="w-full bg-cover bg-center"
  {% if section.settings.image %}
    style="background-image: url({{ background_image }});"
  {% endif %}
>
  <div class="container">
    <div class="h-(--size-500) grid grid-cols-1 lg:grid-cols-2 items-start gap-10 py-(--size-126) lg:py-(--size-156)">
      <div>
        {% if section.settings.heading != blank %}
          <h2 class="text-3xl leading-9 text-white max-w-(--size-648) mb-4">
            {{ section.settings.heading }}
          </h2>
        {% endif %}

        {% if section.settings.text != blank %}
          <p class="text-white max-w-(--size-648) mb-8">
            {{ section.settings.text }}
          </p>
        {% endif %}

        {% if section.settings.button_label != blank %}
          <a
            href="{{ section.settings.button_link }}"
            class="inline-flex items-center justify-center bg-white px-8 py-4 rounded-lg transition hover:bg-gray-light"
          >
            {{ section.settings.button_label }}
          </a>
        {% endif %}
      </div>
    </div>
  </div>
</section>


{% schema %}
{
  "name": "CTA Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Step Into Next-Level Comfort"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Text",
      "default": "Experience the perfect mix of style, support, and all-day cushioning with Nike Air Max Plus."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    }
  ],
  "presets": [
    {
      "name": "CTA Banner"
    }
  ]
}
{% endschema %}
