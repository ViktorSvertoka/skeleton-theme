{% assign product = section.settings.product %}
{% if product == blank %}{% endif %}
{% assign related_colors_field = product.metafields.custom.related_colors %}
{% assign related_color_products = blank %}
{% if related_colors_field %}
  {% assign related_color_products = related_colors_field.value | default: related_colors_field %}
{% endif %}

<script src="{{ 'main-product.js' | asset_url }}" defer></script>

<section class="product">
  <div class="container">

     {% render 'product-breadcrumbs', product: product %}

    <div class="product__content flex flex-col items-center gap-8 lg:flex-row lg:items-start">

      {% render 'product-gallery', product: product %}

      <div class="product__info max-w-(--size-648)">

        <h1 class="product__title mb-2 text-3xl font-medium">
          {{ product.title }}
        </h1>

        <div class="mb-3 flex items-center gap-2 text-sm">
          <div class="flex items-center gap-0.5">
            {% for i in (1..5) %}
              <svg class="h-6 w-6">
                <use href="{{ 'sprite.svg' | asset_url }}#star"></use>
              </svg>
            {% endfor %}
          </div>
          <span class="text-gray">5.0</span>
        </div>

        <p class="product__description mb-4 text-sm leading-relaxed text-gray">
          {{ product.description | strip_html }}
        </p>

        {% render 'product-price', product: product %}

        {% render 'product-color-swatches', product: product %}

        {% render 'product-size-selector', product: product %}

        {% assign v = product.selected_or_first_available_variant %}


        {% form 'product', product %}
          <input
            type="hidden"
            name="id"
            value="{{ v.id }}"
            class="variant-id-input"
          >
          {% render 'product-add-to-cart-button', label: 'Add To Bag' %}

        {% endform %}

        {% render 'product-trust-info' %}

        <p class="text-sm leading-relaxed text-gray">
          Let your attitude have the edge in your Nike Air Max Plus, a Tuned Air experience that offers premium stability and unbelievable cushioning. 
        </p>

      </div>
    </div>
  </div>

  {% assign size_guide_table = section.settings.size_guide_table | strip %}
  {% if size_guide_table != blank %}
    {% assign newline = '\n' %}
    {% assign size_guide_rows = size_guide_table | split: newline %}
    {% assign size_guide_title = section.settings.size_guide_title | default: 'Size Guide' %}
    {% assign size_guide_id = 'size-guide-' | append: section.id %}
    <div
      class="fixed inset-0 z-50 hidden items-center justify-center p-4"
      data-size-guide
      aria-hidden="true"
    >
      <div
        class="absolute inset-0 bg-black/60"
        data-size-guide-overlay
        tabindex="-1"
      ></div>
      <div
        class="relative w-full max-w-xl rounded-2xl bg-white p-7 shadow-[0_20px_45px_rgba(17,17,17,0.2)]"
        role="dialog"
        aria-modal="true"
        aria-labelledby="{{ size_guide_id }}"
        tabindex="-1"
        data-size-guide-dialog
      >
        <div class="mb-4 flex items-center justify-between gap-4">
          <h3 id="{{ size_guide_id }}" class="text-xl font-semibold text-dark">{{ size_guide_title }}</h3>
          <button
            type="button"
            class="inline-flex h-9 w-9 items-center justify-center rounded-full border border-stroke transition hover:bg-gray-light focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-dark focus-visible:ring-offset-2"
            data-size-guide-close
            aria-label="Close size guide"
          >
            <svg class="h-4 w-4 rotate-45" aria-hidden="true">
              <use href="{{ 'sprite.svg' | asset_url }}#plus"></use>
            </svg>
          </button>
        </div>

        <div class="overflow-x-auto">
          <table class="w-full border-collapse text-sm">
            <tbody>
              {% for row in size_guide_rows %}
                {% assign row = row | strip %}
                {% if row == blank %}
                  {% continue %}
                {% endif %}
                {% assign row_parts = row | split: '|' %}
                {% assign row_label = row_parts[0] | strip %}
                {% assign row_values_raw = row_parts[1] | default: '' %}
                {% assign row_values = row_values_raw | split: ',' %}
                <tr class="{% cycle 'bg-white', 'bg-gray-50' %}">
                  <th scope="row" class="px-4 py-3 text-left text-sm font-semibold text-dark">
                    {{ row_label }}
                  </th>
                  {% for value in row_values %}
                    {% assign value = value | strip %}
                    {% if value != blank %}
                      <td class="px-4 py-3 text-center text-sm text-dark">{{ value }}</td>
                    {% endif %}
                  {% endfor %}
                </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  {% endif %}
</section>

<script>
  window.__PRODUCT_DATA__ = {
    activeProductId: {{ product.id }},
    moneyFormat: {{ shop.money_format | json }},
    moneyCurrency: {{ shop.currency | json }},
    products: [
      {% render 'product-data-json', product: product %}
      {% for color_product in related_color_products %}
        {% if color_product == blank %}
          {% continue %}
        {% endif %}
        ,{% render 'product-data-json', product: color_product %}
      {% endfor %}
    ]
  };
</script>

{% schema %}
{
  "name": "Main Product",
  "tag": "section",
  "settings": [
    {
      "type": "product",
      "id": "product",
      "label": "Product"
    },
    {
      "type": "text",
      "id": "size_guide_title",
      "label": "Size guide title",
      "default": "Size Guide"
    },
    {
      "type": "textarea",
      "id": "size_guide_table",
      "label": "Size guide rows",
      "info": "Use the format `Label|value,value,value` per line.",
      "default": "US - Men's|3.5,4,4.5,5\nUS - Women's|5,5.5,6,6.5\nUK|3,3.5,4,4.5\nEU|35.5,36,36.5,37.5"
    }
  ],
  "presets": [
    {
      "name": "Main Product"
    }
  ]
}
{% endschema %}
